// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../src/.prisma"
}

datasource db {
    provider = "sqlite"
    url      = "file:./db.sqlite"
}

model Game {
    id   String @id
    name String
    Clip Clip[]
}

model User {
    id          String @id
    name        String
    displayName String
    Clip        Clip[]
}

model Clip {
    id            String   @id
    url           String
    embedUrl      String
    broadcasterId String
    broadcaster   User     @relation(fields: [broadcasterId], references: [id])
    videoId       String
    gameId        String
    game          Game     @relation(fields: [gameId], references: [id])
    language      String
    title         String
    createdAt     DateTime
    thumbnailUrl  String
    duration      Float
}
